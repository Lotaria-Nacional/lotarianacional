generator client {
  provider = "prisma-client-js"  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String
  email String @unique
  password String
  profilePic String?
  createdAt DateTime
}

model News {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  image String
  title String
  description String
  createdAt DateTime
}

model DailyResult {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  date    DateTime  @unique
  results Result[]
}
model Result {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  startHour  String
  number_1    Int
  number_2    Int
  number_3    Int
  number_4    Int
  number_5    Int
  createdAt  DateTime @default(now())
  dailyId    String   @db.ObjectId
  DailyResult DailyResult @relation(fields: [dailyId], references: [id])
}

model Agencies {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  phone Int
  latitude Int
  longitude Int
  createdAt DateTime
  location_text String
}

model Banners {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  desktop_banner_1 String
  desktop_banner_2 String
  desktop_banner_3 String
  mobile_banner_1 String
  mobile_banner_2 String
  mobile_banner_3 String
}