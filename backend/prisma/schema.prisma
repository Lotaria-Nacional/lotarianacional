generator client {
  provider = "prisma-client-js"  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String
  email String @unique
  password String
  role String
  profilePic String?
  createdAt DateTime
}

model News {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  image String
  title String
  description String
  createdAt DateTime
}

model DailyResult {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  date    DateTime @unique
  formatedDate String
  createdAt DateTime @default(now())
  results Result[]   
}
model Result {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  startHour  String
  number_1    Int
  number_2    Int
  number_3    Int
  number_4    Int
  number_5    Int
  videoURL    String
  createdAt   DateTime @default(now())
  dailyId     String   @db.ObjectId
  DailyResult DailyResult @relation(fields: [dailyId], references: [id])
}

model Agencies {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  phone Int
  latitude Float
  longitude Float
  createdAt DateTime
  location_text String
}

model Banner {
 id String @id @default(auto()) @map("_id") @db.ObjectId
 device String
 image String
 createdAt DateTime @default(now())
}

model Statistics {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  file String
  createdAt DateTime @default(now())
  statsData Json
}

model Emission {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  url String
  createdAt DateTime @default(now())
  formatedData String?
  description String?
}